@model OSL.Forum.Web.Models.Topic.TopicDetailsModel
@{
    ViewBag.Title = "Topics";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Topics</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#"></a></li>
                    <li class="breadcrumb-item active"></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h4 class="text-primary text-bold">
                    @Model.Category.Name / @Model.Forum.Name
                </h4>
            </div>
        </div>
        <div class="row m-2">
            <div class="col">
                <h5 class="text-bold">
                    @Model.Topic.Name
                </h5>
            </div>
            <div class="col">
                <a href="@Url.Action("Create", "Topic", new { forumId = @Model.Forum.Id })" class="btn btn-primary d-grid gap-2 d-flex float-right">
                    Reply
                    <i class="fas fa-reply m-1"></i>
                </a>
            </div>
        </div>
        <div class="row">
            @foreach (var post in Model.Topic.Posts)
            {
                <div class="col-sm-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-sm-8 my-3 pl-4">
                                <h6 class="text-bold">@post.Name</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-8 my-3 pl-4">
                                <h6 class="text-bold">@post.Name</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 my-3 pl-4">
                                @Html.Raw(post.Description)
                            </div>
                            @if (Model.Roles.Contains("SuperAdmin") || Model.Roles.Contains("Admin"))
                            {
                                <div class="col-4 my-3">
                                    <a href="@Url.Action("Delete", "Forum", new { id = forum.Id, categoryId = Model.Category.Id })" class="d-grid gap-2 d-flex float-right p-1 ml-3">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Forum", new { id = forum.Id, categoryId = Model.Category.Id })" class="d-grid gap-2 d-flex float-right p-1">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="@Url.Action("Create", "Topic", new { forumId = @Model.Forum.Id })" class="btn btn-primary d-grid gap-2 d-flex float-right mr-3">
            Reply
            <i class="fas fa-reply m-1"></i>
        </a>
    </div>
</section>

