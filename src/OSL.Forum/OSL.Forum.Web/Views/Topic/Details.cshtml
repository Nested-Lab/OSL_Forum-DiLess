@model OSL.Forum.Web.Models.Topic.TopicDetailsModel
@{
    ViewBag.Title = "Topics";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Topics</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#"></a></li>
                    <li class="breadcrumb-item active"></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-primary text-bold">
                    @Model.Category.Name / @Model.Forum.Name
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-primary text-bold">
                    @Model.Topic.Name
                    <a href="@Url.Action("Create", "Topic", new { forumId = @Model.Forum.Id })" class="btn btn-primary d-grid gap-2 d-flex float-right m-2">
                        Reply
                        <i class="far fa-reply m-1"></i>
                    </a>
                </h3>
            </div>
        </div>
        <div class="row">
            @foreach (var post in Model.Topic.Posts)
            {
                <div class="col-sm-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-sm-12 my-3 pl-4">
                                @post.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 my-3 pl-4">
                                @Html.Raw(post.Description)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

