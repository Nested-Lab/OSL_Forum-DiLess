@model OSL.Forum.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal ml-3 mb-3", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5 class="text-center mt-2">Create a new account.</h5>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-6 control-label ml-3" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control ml-3" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label ml-3" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control ml-3" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label ml-3" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control ml-3" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label ml-3" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ml-3" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ml-3">
            <input type="submit" class="btn btn-primary" value="Sign up" />
        </div>
    </div>
    <p class="ml-3">
        Already have an account? @Html.ActionLink("Sign in", "Login")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
