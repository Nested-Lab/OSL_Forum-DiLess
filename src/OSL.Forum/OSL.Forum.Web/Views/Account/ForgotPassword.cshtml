@model OSL.Forum.Web.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Forgot your password?";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal ml-3 mt-3 mb-3", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p class="ml-2">You forgot your password? Here you can easily retrieve a new password.</p>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Request New Password" />
        </div>
    </div>
    <p class="ml-2">
        Already have an account? @Html.ActionLink("Sign in", "Login")
    </p>
    <p class="ml-2">
        Sign up as a new user @Html.ActionLink("Sign up", "Register")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
