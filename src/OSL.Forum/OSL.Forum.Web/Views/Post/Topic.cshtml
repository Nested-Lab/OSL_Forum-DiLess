@model OSL.Forum.Web.Models.Post.TopicViewModel
@{
    ViewBag.Title = "Topics";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Topics</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#"></a></li>
                    <li class="breadcrumb-item active"></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h3 class="text-primary text-bold">
                    @Model.Category.Name / @Model.Forum.Name
                    <i class="far fa-star m-2"></i>
                </h3>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Create", "Post", new { forumId = @Model.Forum.Id })" class="btn btn-primary d-grid gap-2 d-flex float-right m-2">
                    <i class="fa fa-plus-square m-1"></i>
                    New Topic
                </a>
            </div>
        </div>
        <div class="row">
            @foreach (var topic in Model.Forum.Topics)
            {
                <div class="col-sm-12 p-3">
                    <div class="card">
                        <div class="row">
                            <div class="col-sm-12 my-3 pl-4">
                                @*@Html.ActionLink(forum.Name, "Details", "Category", new { id = forum.Id },
                                    new { @class = "stretched-link" })*@
                                @topic.Name
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


